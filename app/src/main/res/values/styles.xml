<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>

    </style>
    <style name="TransparentProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>

    </style>
    <style name="dialog_congratulation_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_congratulation_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_congratulation_exit</item>
    </style>

    <style name="active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@fonts/Tajawal-Regular.ttf</item>
    </style>
    <style name="custom_horizontal_progress_bar_right" parent="Widget.AppCompat.ProgressBar.Horizontal"
        >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_horizontal_progress_bar_right</item>
    </style>
    <style name="custom_horizontal_progress_bar_left" parent="Widget.AppCompat.ProgressBar.Horizontal"
        >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_horizontal_progress_bar_left</item>
    </style>

</resources>