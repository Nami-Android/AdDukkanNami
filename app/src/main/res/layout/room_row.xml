<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.addukkanapp.models.RoomModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_avatar"
                user_image="@{model.other_user.logo}"
                app:riv_corner_radius="30dp" />

            <Space
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="@{model.other_user.name}"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:maxEms="8"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="@{model.last_messages.message}"
                        android:textColor="@color/gray6"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:maxEms="10"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:text="@{model.last_messages.created_at}"
                    android:textColor="@color/gray6"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center|end"
                    android:background="@drawable/circle_primary"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@{String.valueOf(model.unread_messages_count)}"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="@{model.unread_messages_count>0?View.VISIBLE:View.GONE,default=gone}"


                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Space
                android:layout_width="68dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray3"/>
        </LinearLayout>

    </LinearLayout>
</layout>